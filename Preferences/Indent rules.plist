<plist version="1.0">
<dict>
	<key>name</key>
	<string>Indent rules</string>
	<key>scope</key>
	<string>source.ocaml</string>
	<key>settings</key>
	<dict>
		<key>decreaseIndentPattern</key>
		<string>^[ \t]*(and|end|done)|^[^\("]*\)</string>
		<key>increaseIndentPattern</key>
		<string>^.*(\([^)"\n]*|begin)$|\b(and|let)\s+[a-z][a-zA-Z0-9_']*.*(?!in$)|match[ \t]+.*[ \t]+with[ \t]*$|\b(class|object|struct|sig)\b|method[ \t]+.*=[ \t]*$|-&gt;[ \t]*$|(for|while)[ \t]+.*[ \t]+do[ \t]*$</string>
		<key>indentNextLinePattern</key>
		<string>(?!\bif.*then.*(else.*|(;|[ \t]in)[ \t]*$))\bif|\bthen[ \t]*$|\belse[ \t]*$</string>
	</dict>
